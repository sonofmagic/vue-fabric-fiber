{
  "name": "vue-fabric-fiber",
  "type": "module",
  "version": "0.0.0",
  "description": "Composable Vue wrappers around Fabric.js primitives.",
  "author": "ice breaker <1324318532@qq.com>",
  "license": "MIT",
  "homepage": "https://fabric.icebreaker.top",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sonofmagic/vue-fabric-fiber.git",
    "directory": "packages/vue-fabric-fiber"
  },
  "bugs": {
    "url": "https://github.com/sonofmagic/vue-fabric-fiber/issues"
  },
  "keywords": [
    "vue",
    "fabric",
    "canvas",
    "renderer",
    "fiber",
    "graphics"
  ],
  "sideEffects": false,
  "exports": {
    ".": "./lib/index.ts"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite build --watch",
    "build": "vue-tsc -b && vite build",
    "test": "vitest run",
    "test:dev": "vitest",
    "release": "pnpm publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "require": "./dist/index.umd.cjs"
      },
      "./style.css": "./dist/index.css"
    },
    "main": "./dist/index.umd.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts"
  },
  "dependencies": {
    "fabric": "^6.9.0",
    "p-queue": "^9.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/tsconfig": "^0.8.1",
    "jsdom": "^27.2.0",
    "vite": "^7.2.2",
    "vite-plugin-dts": "^4.5.4",
    "vue": "^3.5.24",
    "vue-tsc": "^3.1.3"
  }
}
